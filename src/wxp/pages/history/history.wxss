.post-container{
  flex-direction: column;
  display: flex;
  margin:20rpx 0 40rpx;
  background-color: #fff;
  border-top: 1rpx solid #ededed;
  border-bottom: 1rpx solid #ededed;
  padding-bottom: 5rpx;
}
.post-little-container{
  display: flex;
  flex-direction: row;
  margin-left: 40rpx;
}
.comment{
  font-size: 30rpx;
  margin-left: 30rpx;
}
.post-little-container text{
  font-size: 30rpx;
}
.post-little{
display: flex;
flex-direction: column;
height: 150rpx;
width: 200rpx;
margin-bottom: 10rpx;
}
.post-little image{
  width:150rpx;
  height:100%;
}
.posy-little text{
  font-size: 20rpx;
  margin-bottom: 10rpx;
}
.item-img{
  margin-left: 40rpx;
  margin-bottom: 10rpx;
}