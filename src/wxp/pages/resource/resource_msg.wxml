<view class="weui-cells__title">联系人</view>
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__bd">
      <input class="weui-input" placeholder="请输入你的名字" bindinput='Input_nick'/>
      <view class="input-counter" maxlength='140'>字数不能超过10</view>
    </view>
  </view>
</view>
  <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示</view>
<view class="weui-cells__title">留言</view>
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell">
    <view class="weui-cell__bd">
      <textarea class="weui-textarea" 
      placeholder="请输入文本\n为了便于作者和你联系，请输入您的联系方式" bindinput='Input_content' style="height: 3.3em" />
      <view class="weui-textarea-counter" maxlength='140'>字数不能超过140</view>
    </view>
  </view>
</view>
 
 <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="showTopTips">确定</button>
        </view>