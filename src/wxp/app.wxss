/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.input-box{
  background: #E1F5FE;
  border: 1px black;
  margin-top: 16rpx;
  width: 100%
}
.choose-item-true text{
  font-size: 40rpx;
  line-height: 80rpx;
  font-family: Microsoft YaHei;
  color: #000;
}
.choose-item-true{
  margin-top:80rpx;
  border:1px solid #000;
  width: 450rpx;
  height: 90rpx;
  border-radius: 5px;
  text-align: center;
  background-color: #40C4FF
}
.choose-item-false text{
  font-size: 40rpx;
  line-height: 80rpx;
  font-family: Microsoft YaHei;
  color: #000;
}
.choose-item-false{
  margin-top:80rpx;
  border:1px solid #000;
  width: 450rpx;
  height: 90rpx;
  border-radius: 5px;
  text-align: center;
}