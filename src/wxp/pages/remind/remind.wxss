.post-container{
  flex-direction: column;
  display: flex;
  margin:20rpx 0 40rpx;
  background-color: #fff;
  border-top: 1rpx solid #ededed;
  border-bottom: 1rpx solid #ededed;
  padding-bottom: 5rpx;
}
.post-little-container{
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
}
.comment{
  font-size: 30rpx;
  margin-left: 30rpx;
}
.post-little-container text{
  font-size: 30rpx;
}
.post-little{
display: flex;
flex-direction: column;
}
.post-little image{
  width:80rpx;
  height: 80rpx;
}
.posy-little text{
  font-size: 20rpx;
}